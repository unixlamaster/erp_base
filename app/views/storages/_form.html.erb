<%= form_for @storage do |f| %>
  <% if @storage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@storage.errors.count, "error") %> prohibited this storage post from being saved:</h2>
      <ul>
      <% @storage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <b>Наименование:</b><br>
      <%= f.text_field :name %>
    </div>
      <div class="field">
      <b>Адрес:</b><br>
      <%= f.select :address, storage_address_array.each.collect {|value| [value,value]} %>
    </div>
<div class="row">
      <div class="large-3 columns">
        <div class="field">
          <b>Ед. изм.:</b><br><input type="text" name=storage[unit] value="<%=@storage.unit%>">
        </div>
      </div>
      <div class="large-3 columns">
        <div class="field">
	  <b>Количество:</b><br> <input type="text" name=storage[mass] value="<%=@storage.mass%>">
        </div>
      </div>
      <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
